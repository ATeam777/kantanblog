@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div style="text-align: center;">
<h1>ログイン</h1>

<div style="text-align: center;">
    
        <div class="col-md-4 mx-auto">
            <section>
                <form id="account" method="post">
                    <p>かんたんブログを使用するには</p>
                    <p>かんたんブログアカウントにログインしてください</p>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">メールアドレスを入力して下さい</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">パスワードを入力して下さい</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            自動ログイン
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">ログイン</button>
                    </div>
                    <div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">パスワードをお忘れですか?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">新規ユーザーとして登録</a>
                        </p>
                     <!--<p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">確認メールを再送信する</a>
                        </p>-->
                    </div>
                </form>
            </section>
        </div>
  
   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
