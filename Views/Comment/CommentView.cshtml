@model IEnumerable<KantanBlog001.Models.Comment>

@{
    ViewData["Title"] = "Index";

    int article_id = 0;
    if (ViewData["ArticleId"] != null)
        article_id = (int)ViewData["ArticleId"];

}

<div style="text-align: center;">
    <h1>コメント一覧</h1>
</div>


<div class="comment-list-content">
    <br>
    <p class="a-create-comment">
        <a href="@Url.Action("CommentCreate", "Comment", new { articleId = article_id })">
            コメント投稿
        </a>
    </p>
    <br>
    @foreach (var item in Model)
    {

    @* @Html.DisplayFor(modelItem => item.Article.Title) *@
        
        <div class="comment-list-title">
            @Html.DisplayFor(modelItem => item.UserName)
        </div>
        <div class="comment-list-time">
            @Html.DisplayFor(modelItem => item.Create_Time)
        </div>
        <div class="comment-list-text">
            <pre style="white-space: pre-wrap;">@Html.DisplayFor(modelItem => item.CommentText)</pre>
        </div>
    }
    <br>
    <p class="a-create-comment">
        <a asp-controller="Articles" asp-action="UserArticleList">記事リストに戻る</a>
    </p>
</div>


